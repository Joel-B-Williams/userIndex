<div>
  <div class="form">
    <div class="fields">
      <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, placeholder: "email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.password_field :password, placeholder: "password", autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <br>
          <div class="field">
            <%= f.check_box :remember_me, class: "checkbox" %>
            <%= f.label :remember_me %>
          </div>
          <br>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
        <br>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>